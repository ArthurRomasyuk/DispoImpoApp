<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_tv_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize="@dimen/fragment_title_size"
        android:layout_marginTop="@dimen/fragment_title_margin_top"
        android:text="DISPO"/>

    <HorizontalScrollView
        android:layout_below="@+id/title_tv_events"
        android:id="@+id/hsv"
        android:layout_marginTop="@dimen/fragment_title_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/table_dispo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </HorizontalScrollView>
    <Button
        android:id="@+id/upadte_btn"
        android:layout_marginTop="40dp"
        android:layout_below="@id/hsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENVOYER MES DISPOs"
        android:textSize="20sp" />
</RelativeLayout>